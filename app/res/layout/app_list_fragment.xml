<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/text_server_status_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:text="@string/server_status" />

    <ImageView
        android:id="@+id/image_server_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="2dip"
        android:layout_alignTop="@+id/text_server_status_title"
        android:layout_toRightOf="@+id/text_server_status_title"
        android:src="@drawable/red_dot" />
    
    <TextView
        android:id="@+id/text_server_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:layout_marginLeft="5dip"
        android:layout_toRightOf="@+id/image_server_status" />
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#22000000"
        android:layout_marginTop="5dip"
        android:layout_below="@+id/text_server_status_title"
        android:id="@+id/view_seperate_line" 
        />

    <ListView
        android:id="@android:id/list"
        android:layout_marginTop="5dip"
        android:layout_below="@+id/view_seperate_line"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>